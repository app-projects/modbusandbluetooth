/* modify/modify.wxss */

.connected_info {
	position: relative;
	top: 0;
	width: 100%;
	background-color: white;
	padding: 10rpx;
	padding-bottom: 20rpx;
	padding-top: 5rpx;
	margin-bottom: env(safe-area-inset-bottom);
	font-size: 14px;
	height: 400rpx;

	/* box-shadow: 0px 0px 3px 0px; */
}

.connected_info .operation {
	position: relative;
	top: 0;
}

.input {
	width: 500rpx;
	height: 35rpx;
	border: 1px solid lightgray;
	border-radius: 6px;
	background-color: white;
	margin-left: 10rpx;
	margin-top: 1rpx;
}

.inputcon {
	margin-bottom: 3rpx;
	height: 200rpx;
	position: relative;
	padding-top: 20rpx;
}

.row {
	position: absolute;
	width: 600rpx;
}

.row text {
	margin-top: 6rpx;
}

.inputcon .item {
	float: left
}

.optbtn {
	margin-left: 20rpx;

}


.devices_summary {
	margin-top: 5px;
	padding: 10px;
	font-size: 14px;
}

.device_list {
	height: 100%;
	margin: 0 5rpx;
	border: 1px solid #EEE;
	border-radius: 5px;
	width: auto;

}


.device_item {
	border-bottom: 1px solid #EEE;
	padding: 10px;
	color: #666;
}

.device_item_hover {
	background-color: rgba(0, 0, 0, .1);
}